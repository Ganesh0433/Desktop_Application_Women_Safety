<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guardian Gesture</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .image-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 10px;
        }
        .image-container {
            border: 1px solid #ddd;
            border-radius: 5px;
            overflow: hidden;
            padding: 5px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        img {
            width: 100%;
            height: auto;
            display: block;
        }
        .image-caption {
            text-align: center;
            margin-top: 5px;
            font-size: 14px;
            color: #555;
        }
        .location-alert {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            background-color: rgba(255, 0, 0, 0.8);
            color: white;
            padding: 10px;
            border-radius: 5px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 1000;
        }
        .close-alert {
            background: none;
            border: none;
            color: white;
            font-size: 18px;
            cursor: pointer;
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.1/socket.io.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var socket = io.connect(); // Establish connection to the server

            // Function to show notifications
            function showNotification(title, body) {
                if (Notification.permission === 'granted') {
                    new Notification(title, { body });
                } else if (Notification.permission !== 'denied') {
                    Notification.requestPermission().then(function(permission) {
                        if (permission === 'granted') {
                            new Notification(title, { body });
                        }
                    });
                }
            }

            // Handle new image event
            socket.on('new_image', function(data) {
                console.log('Received new image:', data.filename);
                var imageGrid = document.querySelector('.image-grid');
                var imageContainer = document.createElement('div');
                imageContainer.className = 'image-container';
                var img = document.createElement('img');
                img.src = '/image/' + data.filename; // Ensure the correct path
                img.alt = data.filename;
                imageContainer.appendChild(img);
                imageGrid.appendChild(imageContainer);

                if (canShowNotification) {
        showNotification("Emergency Detected");

        // Disable further calls for 2 minutes
        canShowNotification = false;
        setTimeout(() => {
            canShowNotification = true;
        }, 2 * 60 * 1000); // 2 minutes in milliseconds
    }
            });

            // Handle location data event
            socket.on('location_data', function(data) {
                console.log('Received location data:', data);
                var alertBox = document.querySelector('.location-alert');
                if (data) {
                    alertBox.innerHTML = `<strong>Emergency Alert:</strong> Latitude: ${data.latitude}, Longitude: ${data.longitude}`;
                    alertBox.style.display = 'flex';

                    // Show notification for location data
                    showNotification('Emergency Alert', `Location: Latitude ${data.latitude}, Longitude ${data.longitude}`);
                } else {
                    alertBox.style.display = 'none';
                }
            });
        });
    </script>
</head>
<body>
    <div class="location-alert" style="display: none;">
        <div>No location data available.</div>
        <button class="close-alert" onclick="this.parentElement.style.display='none'">&times;</button>
    </div>

    <div class="image-grid">
        <!-- This will be populated dynamically by the server -->
    </div>
</body>
</html>
